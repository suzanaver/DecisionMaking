@model IEnumerable<Models.NextStep>
<div class="col-md-6">
    <div class="form-group">
        <table class="table table-striped table-hover table-bordered next-steps-table" id="sample_editable_1">
            <thead>
                <tr>
                    <th>
                        משימה
                    </th>
                    <th>
                        אחריות
                    </th>
                    <th>
                        תאריך יעד
                    </th>
                    <th>
                        תאריך נדחה
                    </th>
                     
                    <th>
                        
                    </th>
                      
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var nextStep in Model)
                    {
                        Html.RenderPartial("~/Views/Shared/Partials/NextSteps/_NextStep.cshtml", nextStep);

                    }
                }
                else
                {
                    Html.RenderPartial("~/Views/Shared/Partials/NextSteps/_NextStep.cshtml",new Models.NextStep());

                }
            </tbody>
        </table>
        <button type="button" class="btn green btn-xs addNextStep">
            הוסף</button>
    </div>
</div>
