<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/assets/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet"
        type="text/css" />
    <link href="@Url.Content("~/assets/plugins/bootstrap/css/bootstrap-rtl.min.css")" rel="stylesheet"
        type="text/css" />
     @RenderSection("styles", false);
   
    <link href="@Url.Content("~/assets/plugins/uniform/css/uniform.default.css")" rel="stylesheet" type="text/css" />
    @RenderSection("PageLevelStyle", required: false)
    <link href="@Url.Content("~/assets/css/style-metronic-rtl.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/style-rtl.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/style-responsive-rtl.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/plugins-rtl.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/pages/tasks-rtl.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/themes/default-rtl.css")" rel="stylesheet" type="text/css" id="style_color" />
    <link href="@Url.Content("~/assets/css/custom-rtl.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    @RenderSection("CustomStyle", required: false)
</head>
<body class="page-header-fixed">
    <nav class="navbar navbar-default top-menu portal-menu">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">

    
           <li>@Html.ActionLink("Home", "Index", "Home")</li>
                           
                             <li>@Html.ActionLink("צור מסמך", "CreateDecision", "Home")</li>
                                 <li>@Html.ActionLink("הצג מסמכים", "DisplayDecisionDocuments", "Home")</li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
    <div class="container">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
    </div>
    <footer>
            <div class="footer-details">
    
                מערכת ניהול החלטות PHI
            
    </div>
        </footer>
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script>
      var baseUrl =    "@Url.Content("~/")";
      </script>
    <script src="@Url.Content("~/assets/plugins/jquery-1.10.3.min.js")" type="text/javascript"></script>
  
    <script src="@Url.Content("~/assets/plugins/jquery-migrate-1.2.1.min.js")" type="text/javascript"></script>
     <script src="@Url.Content("~/assets/plugins/jquery-ui/jquery-ui-1.11.4.min.js")" type="text/javascript"></script>
 
    <!-- IMPORTANT! Load jquery-ui-1.10.3.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
   
    <script src="@Url.Content("~/assets/plugins/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    
   
    <script src="@Url.Content("~/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/jquery.blockui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/jquery.cokie.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/uniform/jquery.uniform.min.js")" type="text/javascript"></script>

       
    <!-- END CORE PLUGINS -->

     <!-- BEGIN PAGE LEVEL PLUGINS -->
    @RenderSection("PageLevelScripts", required: false)
      <!-- END PAGE LEVEL PLUGINS -->


    <!-- END PAGE LEVEL SCRIPTS -->
    @RenderSection("Scripts", required: false)
</body>
</html>
